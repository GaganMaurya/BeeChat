<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="8dp"
    android:id="@+id/container"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/callerimage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        tools:srcCompat="@drawable/img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/callername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Jhone doe"
        app:layout_constraintStart_toEndOf="@id/callerimage"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/phonenumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Jhone doe"
        app:layout_constraintStart_toEndOf="@id/callerimage"
        app:layout_constraintEnd_toEndOf="@id/callername"
        app:layout_constraintTop_toBottomOf="@id/callername"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textStyle="bold"

       android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:textSize="12sp"/>

    <Button
        android:id="@+id/invitebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Invite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/callerimage"
        app:layout_constraintBottom_toBottomOf="@id/callerimage"
        android:layout_marginTop="8dp"
        android:textStyle="bold"

        android:textSize="14sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>