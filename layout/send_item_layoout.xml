<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
  android:background="@drawable/main_drable2"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:layout_gravity="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/send_drawable">



    <TextView
        android:id="@+id/sendmessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hi how are you"
        android:textSize="16sp"
        android:paddingVertical="8dp"
        android:paddingHorizontal="6dp"
        android:textColor="@color/black"
        android:background="@drawable/send_drawable"
        android:textAlignment="textEnd"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/timeformat"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:id="@+id/timeformat"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="1:30"
        android:textSize="10dp"
        android:paddingVertical="6dp"
        android:textColor="#494848"
        android:paddingHorizontal="2dp"
        android:gravity="end"
        app:layout_constraintEnd_toStartOf="@id/bluetikk"
        app:layout_constraintBottom_toBottomOf="parent"
        />
        <ImageView
            android:id="@+id/bluetikk"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:visibility="gone"
           android:src="@drawable/bluetick"
            android:padding="4dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>