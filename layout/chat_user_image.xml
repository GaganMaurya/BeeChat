<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="8dp"
    android:id="@+id/container"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/usimg"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:padding="8dp"
        android:src="@drawable/img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/usname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Jhone doe"
        app:layout_constraintStart_toEndOf="@id/usimg"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"

        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/ustime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="1:30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#D1D1D1"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:textSize="14sp"/>
    <TextView
        android:id="@+id/uschat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="last message to be appear hear"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/usimg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/usname"

        android:layout_marginStart="16dp"
        android:textSize="14sp"/>





</androidx.constraintlayout.widget.ConstraintLayout>